<launch>

<node pkg="tf" type="static_transform_publisher" name="baselink_to_laserlink"     args="0.03 0 0.00 0 0 0 base_link laser_link 30" />
  <node pkg="tf" type="static_transform_publisher" name="basefootprint_to_baselink" args="0.00 0 0.02 0 0 0 base_footprint base_link 30" />

 <include file="$(find hongik_bringup)/launch/arduinouno.launch" />
 <node pkg="hongik_localization" type="rviz_click_to_2d" name="rviz_click_to_2d" />

  <!-- Cartographer Node for Localization -->
  <node name="cartographer_node" pkg="cartographer_ros" type="cartographer_node" output="screen" args="
    -configuration_directory $(find slam)/lua
    -configuration_basename localization.lua">
    <param name="use_pure_localization" value="true"/> <!-- 위치 추정 모드 설정 -->
    <param name="load_state_filename" value="/home/ubuntu/catkin_ws/src/maps/my_map.pbstream"/> <!-- 저장된 맵 파일 경로 -->
    <param name="log_level" value="warn"/> 

 </node>



<node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />

 <node name="waypoint_follower" pkg="waypoint" type="waypoint_follower.py" 
output="screen" />

 <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d /home/ubuntu/catkin_ws/localizationgas.rviz"/>
 

</launch>
