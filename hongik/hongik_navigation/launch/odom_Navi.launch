<launch>

<node pkg="tf" type="static_transform_publisher" name="baselink_to_laserlink"     args="0 0 0 3.141592 0 0  base_link laser 30" />

  <!-- Transformation Configuration ... Setting Up the Relationships Between Coordinate Frames -->
  <include file="$(find hongik_bringup)/launch/arduinouno.launch" />
 

 <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
  <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>
  <param name="serial_baudrate"     type="int"    value="1000000"/>
  <param name="frame_id"            type="string" value="laser"/>
  <param name="inverted"            type="bool"   value="false"/>
  <param name="angle_compensate"    type="bool"   value="true"/>
  <param name="scan_frequency"      type="double" value="10.0"/>
  </node>



<!-- Subscribe: /initialpose, /move_base_simple/goal -->
  <!-- Publish: /initial_2d, /goal_2d -->
  <node pkg="hongik_localization" type="rviz_click_to_2d" name="rviz_click_to_2d" />



  <!-- RTAB-Map Odometry 노드 실행 (ICP 기반) -->
  <node pkg="rtabmap_ros" type="icp_odometry" name="icp_odometry"
output="screen">
    <param name="frame_id" value="base_link"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="scan_topic" value="/scan"/>
  </node>

  
<!-- Add AMCL example for differential drive robots for Localization -->
  <!-- Subscribe: /scan, /tf, /initialpose, /map -->
  <!-- Publish: /amcl_pose, /particlecloud, /tf -->
  <include file="$(find hongik_navigation)/launch/hongik_amcl.launch"/>




<!-- Map File -->
  <arg name="map_file" default="$(find hongik_navigation)/maps/622test2.yaml"/>

  <!-- Map Server -->
  <!-- Publish: /map, /map_metadata -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" />
 
      
 <!-- Move Base Node -->
  <!-- Subscribe: /move_base_simple/goal -->
  <!-- Publish: /cmd_vel -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />
    <rosparam file="$(find hongik_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hongik_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find hongik_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find hongik_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find hongik_navigation)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find hongik_navigation)/param/trajectory_local_planner_params.yaml" command="load" />
  </node>


</launch>
